generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  apiKey    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  products  Product[]
  stocks    Stock[]
  sales     Sale[]
  validities Validity[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user") // admin, user
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  sku         String
  name        String
  barcode     String?
  department  String?
  category    String?
  brand       String?
  costPrice   Float
  salePrice   Float
  active      Boolean  @default(true)
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  stocks      Stock[]
  saleItems   SaleItem[]
  validities  Validity[]

  @@unique([tenantId, sku])
}

model Stock {
  id        String   @id @default(uuid())
  quantity  Float
  minStock  Float?
  maxStock  Float?
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  updatedAt DateTime @updatedAt

  @@unique([tenantId, productId])
}

model Sale {
  id            String     @id @default(uuid())
  transactionId String
  date          DateTime
  total         Float
  paymentMethod String?
  customerId    String?
  tenantId      String
  tenant        Tenant     @relation(fields: [tenantId], references: [id])
  items         SaleItem[]
  createdAt     DateTime   @default(now())

  @@unique([tenantId, transactionId])
}

model SaleItem {
  id        String  @id @default(uuid())
  saleId    String
  sale      Sale    @relation(fields: [saleId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Float
  unitPrice Float
  total     Float
  discount  Float?
}

model Validity {
  id             String   @id @default(uuid())
  batch          String?
  expirationDate DateTime
  quantity       Float
  productId      String
  product        Product  @relation(fields: [productId], references: [id])
  tenantId       String
  tenant         Tenant   @relation(fields: [tenantId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
